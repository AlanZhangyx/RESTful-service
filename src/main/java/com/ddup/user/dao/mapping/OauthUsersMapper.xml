<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ddup.user.dao.OauthUsersMapper">
	<!-- 获取用户id -->
	<select id="getUserIdWithUserCode" parameterType="java.lang.String" resultType="java.lang.Long">
    	select user_id 
    	  from oauth_client_user
    	where user_code = #{userCode}
	</select>
</mapper>